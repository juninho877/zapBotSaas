# Configuração de Produção para EasyPanel
# Copie este arquivo para .env e configure com seus valores

NODE_ENV=production
PORT=3000

# Database Configuration (Configure com os dados do seu MySQL no EasyPanel)
DB_HOST=your-mysql-host.easypanel.host
DB_PORT=3306
DB_USER=whatsapp_user
DB_PASSWORD=your_secure_password_here
DB_NAME=whatsapp_bot_saas

# JWT Configuration (Gere uma chave secreta forte)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Bot Configuration
BOT_NAME=WhatsApp Bot SaaS
BOT_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=5242880

# CORS Configuration (Configure com seu domínio)
CORS_ORIGIN=https://your-domain.com

# Security Headers
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_CLEANUP_INTERVAL=3600000
SESSION_TIMEOUT=86400000

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000